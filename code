#include <stdio.h>

int main() {
    char operator;
    double num1, num2, r;

    printf("Enter first number: ");
    scanf("%lf", &num1);
    printf("Enter second number: ");
    scanf("%lf", &num2);
    printf("Enter an operator (+, -, *, /): ");
    scanf(" %c", &operator); 

    if (operator == '+') {
        r = num1 + num2;
        printf("Result: %lf\n", r);
    } else if (operator == '-') { 
        r = num1 - num2;
        printf("Result: %lf\n", r);
    } else if (operator == '*') {
        r = num1 * num2;
        printf("Result: %lf\n", r);
    } else if (operator == '/') { 
        if (num2 != 0) { 
            r = num1 / num2;
            printf("Result: %lf\n", r);
        } else { 
            printf("Error! Division by zero is not allowed.\n");
        }
    } else {
        printf("Invalid operator!\n");
    }

    return 0; 
}
